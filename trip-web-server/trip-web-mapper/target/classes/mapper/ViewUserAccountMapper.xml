<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zm.trip.mapper.ViewUserAccountMapper">
    <insert id="add"
            useGeneratedKeys="true"
            keyProperty="web_id"
            parameterType="cn.zm.trip.entity.ViewUserAccount">
        insert into view_user_account(
                id,
                name,
                avatar,
                phone,
                intro,
                username,
                password
        )values(
                #{id},
                #{name},
                #{avatar},
                #{phone},
                #{intro},
                #{username},
                #{password}
        )
    </insert>

    <select id="get"
            parameterType="cn.zm.trip.entity.ViewUserAccount"
            resultType="cn.zm.trip.entity.ViewUserAccount">
        select
            v.id,
            v.name,
            v.avatar,
            v.phone,
            v.intro,
            v.username,
            v.password
        from
        view_user_account v
        where
        1 = 1
            <if test="id != null and id != ''"> and v.id
                = #{id}</if>
            <if test="name != null and name != ''"> and v.name
                = #{name}</if>
            <if test="avatar != null and avatar != ''"> and v.avatar
                = #{avatar}</if>
            <if test="phone != null and phone != ''"> and v.phone
                = #{phone}</if>
            <if test="intro != null and intro != ''"> and v.intro
                = #{intro}</if>
            <if test="username != null and username != ''"> and v.username
                = #{username}</if>
            <if test="password != null and password != ''"> and v.password
                = #{password}</if>
    </select>

    <select id="getById"
            parameterType="cn.zm.trip.entity.ViewUserAccount"
            resultType="cn.zm.trip.entity.ViewUserAccount">
        select
            v.id,
            v.name,
            v.avatar,
            v.phone,
            v.intro,
            v.username,
            v.password
        from
        view_user_account v
        where
        1 = 1
        and v.web_id = #{web_id}
        limit 1
    </select>

    <update id="update"
            parameterType="cn.zm.trip.entity.ViewUserAccount">
        update view_user_account v
        set v.web_id = #{web_id}
                <if test="id != null and id != ''"> , v.id
                    = #{id}</if>
                <if test="name != null and name != ''"> , v.name
                    = #{name}</if>
                <if test="avatar != null and avatar != ''"> , v.avatar
                    = #{avatar}</if>
                <if test="phone != null and phone != ''"> , v.phone
                    = #{phone}</if>
                <if test="intro != null and intro != ''"> , v.intro
                    = #{intro}</if>
                <if test="username != null and username != ''"> , v.username
                    = #{username}</if>
                <if test="password != null and password != ''"> , v.password
                    = #{password}</if>
        where v.web_id = #{web_id}
    </update>

    <delete id="del"
            parameterType="java.lang.String">
        delete from view_user_account
        where web_id = #{web_id}
    </delete>
</mapper>
